<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Welcome"
    android:id="@+id/Welcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to"
        android:id="@+id/textWelcomemsg1"
        android:layout_marginTop="54dp"
        android:textSize="60px"
        android:layout_alignParentTop="true"
        android:textColor="#ff000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you a"
        android:id="@+id/textQuestion"
        android:textSize="80px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Blood"
        android:id="@+id/textWelcomemsg2"
        android:textSize="200px"
        android:textStyle="bold"
        android:layout_below="@+id/textWelcomemsg1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textColor="#ff070305" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="150px"
        android:id="@+id/imageButton"
        android:contentDescription="DonorImage"
        android:longClickable="true"
        android:background="@drawable/donor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:onClick="goToDonorInfo"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="150px"
        android:id="@+id/RecepientImage"
        android:background="@drawable/recepient"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="goToRecepientInfo"
        android:layout_marginRight="30dp" />

</RelativeLayout>
