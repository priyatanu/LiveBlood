<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="liveblood.hackathon.com.liveblood.DonorsList"
    android:background="@drawable/background">

    <TextView android:text="Donor's List" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="70px"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6">


<TableRow
    android:layout_marginTop="20dp">

    <TextView
       android:layout_width="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"

        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Dist."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_column="1" />

</TableRow>

        <TableRow
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praveen"
                android:id="@+id/textName1"
                android:layout_column="0"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 km"
                android:id="@+id/textViewD1"
                android:layout_column="1"
                android:textColor="@android:color/black"
                android:textSize="20dp"

                android:gravity="right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:id="@+id/donorNotify1"
                android:layout_column="2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="notify1"
                android:background="#669999"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/callDonor1"
                android:layout_column="4"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:onClick="call1"
                android:background="#669999" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raghav"
                android:id="@+id/textName2"
                android:layout_column="0"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 km"
                android:id="@+id/textViewD2"
                android:layout_column="1"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:id="@+id/donorNotify2"
                android:layout_column="2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="notify2"
                android:background="#669999"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/callDonor2"
                android:layout_column="4"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="call2"
                android:background="#669999" />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roneet"
                android:id="@+id/textName3"
                android:layout_column="0"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 km"
                android:id="@+id/textViewD3"
                android:layout_column="1"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:id="@+id/donorNotify3"
                android:layout_column="2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="notify3"
                android:background="#669999"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/callDonor3"
                android:layout_column="4"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="call3"
                android:background="#669999" />
        </TableRow>


    </TableLayout>

</RelativeLayout>
